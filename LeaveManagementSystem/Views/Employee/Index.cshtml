@model IEnumerable<LeaveManagementSystem.Models.ViewModel.EmployeeListViewModel>


<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2>Employee Details</h2>
<table class="table table-dark">
    <thead>
        <tr>
            
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Designation</th>
     @*       <th scope="col">Joining Date</th>
            <th scope="col">Department </th>
            <th scope="col"> Designation</th>*@

            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.DesignationName)</td>
                @*<td>@Html.DisplayFor(modelItem => item.DateOfJoin)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                <td>@Html.DisplayFor(modelItem => item.DesignationName)</td>*@
                <td><a class="btn btn-primary" href="@Url.Action("Create", "Leave")">Apply Leave</a></td>
                <td>
                <td class="text-center">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-Id="@item.Id">Edit</a>
                </td>
                <td class="text-center">
                    <a asp-action="Details" class="btn btn-info" asp-route-Id="@item.Id">Details</a>
                </td>
                <td class="text-center">
                    <a asp-action="Delete" class="btn btn-danger" asp-route-Id="@item.Id">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

